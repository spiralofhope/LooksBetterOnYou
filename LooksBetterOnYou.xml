<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  	<CheckButton name="LooksBetterButton" parent="DressUpFrame" hidden="false">
		<Size>
			<AbsDimension x="62" y="25"/>
		</Size>
      <Anchors>
         <Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
            <Offset>
               <AbsDimension x="-34" y="-35"/>
            </Offset>
         </Anchor>
      </Anchors>
      <Layers>
         <Layer level="OVERLAY">
            <FontString name="$parentName" inherits="GameFontHighlightSmallOutline">
   				<Anchors>
   					<Anchor point="TOPLEFT" x="3" y="0"/>
   					<Anchor point="BOTTOMRIGHT"/>
   				</Anchors>
   			</FontString>
         </Layer>
         <Layer level="BACKGROUND">
				<Texture file="Interface\Addons\LooksBetterOnYou\Images\BL_DressUpFrameTab">
					<Size>
						<AbsDimension x="72" y="50"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="-2" y="8"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture name="$parentTabardEmblem" parentKey="TabardEmblem" hidden="true" file="Interface\GuildFrame\GuildEmblemsLG_01">
					<Size x="68" y="31"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-3" y="3"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="2">
				<Texture name="$parentTabardIconFrame" file="Interface\Spellbook\GuildSpellbooktabIconFrame" parentKey="TabardIconFrame" hidden="true">
					<Size x="62" y="25"/>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
				GameTooltip:SetText(self.tooltip);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<NormalTexture file="Interface\Icons\Spell_Magic_LesserInvisibility"/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\CheckButtonHilight" alphaMode="ADD"/>
	</CheckButton>
</Ui>
